            <i class="bi bi-chevron-up"></i>
        </a>
        <!-- NAVIGATION END -->

        <!-- BLOGS ENTRY START -->
        {{ template "common_templates/blogs.tmpl" }}
        <!-- BLOGS ENTRY END -->

        {{ template "common_templates/news_letter.tmpl" }}

