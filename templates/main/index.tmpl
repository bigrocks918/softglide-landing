{{ define "main/index.tmpl" }}
<!DOCTYPE html>
<html lang="en">

{{ template "common_templates/head.tmpl" . }}

<body>
    <!-- FADE OUT ANIMATION WHEN LOADED -->
    <span class="fade"></span>
    <main>
        <!-- MAIN HERO BANNER START -->
        <section class="hero-banner">
            <div class="hero-contained">
                <div class="hero-title fc-white">
                    <!-- <h1 class="ff-damion">SoftGlide</h1> -->
                     <img src="assets/logo.webp" alt="SoftGlide LLC logo">
                    <p class="fs-h4 fw-normal">
                        Welcome to SoftGlide LLC - Innovating the future of E-commerce, Blockchain, and Fintech.
                        We specialize in cutting-edge software solutions that drive business transformation.
                    </p>
                    <a href="#about" class="btn-bg2 border-round mt-20">
                        Learn More <i class="bi bi-chevron-compact-right"></i>
                    </a>
                </div>
            </div>
            <div class="hero-socials">
                <a href="#" class="mt-a icon-link" aria-label="Follow us on facebook">
                    <i class="bi bi-facebook"></i>
                </a>
                <a href="#" class="icon-link mt-10" aria-label="Follow us on instagram">
                    <i class="bi bi-instagram"></i>
                </a>
                <a href="#" class="icon-link mt-10" aria-label="Follow us on twitter">
                    <i class="bi bi-twitter"></i>
                </a>
                <a href="#" class="icon-link mt-10" aria-label="Follow us on youtube">
                    <i class="bi bi-youtube"></i>
                </a>
            </div>
        </section>
        <!-- MAIN HERO BANNER END -->
        {{ template "common_templates/navbar.tmpl" }}
        <a href="#" class="btn-back-to-top" aria-label="Back to top button">
            <i class="bi bi-chevron-up"></i>
        </a>

        <!-- ABOUT SECTION START -->
        <section class="contained row" id="about">
            <h2 class="section-title ff-damion">About us</h2>
            <div class="col-balance">
                <span class="fc-primary fs-h2">
                    Discover the passion behind SoftGlide LLC.
                </span>
                <p>
                    Discover the passion behind SoftGlide LLC, where innovation meets expertise in the dynamic worlds of E-commerce, Blockchain, and Fintech.
                </p>
                <p>
                    As a leading software development company, we are dedicated to driving digital transformation and empowering businesses to navigate the complexities of today's technological landscape.
                </p>
                <p>
                    Our talented team of experts prioritizes customer satisfaction through the creation of tailored software solutions designed to meet the unique needs of every client.
                </p>
                <p>
                    At SoftGlide LLC, we believe in redefining the future of commerce and finance by harnessing the power of cutting-edge technology.
                </p>
                <p>
                    Our agile approach ensures that we swiftly adapt to ever-changing market demands, placing us at the forefront of tech evolution.
                </p>
                <p>
                    With a commitment to crafting exceptional digital experiences, we transform business landscapes and propel our clients toward success.
                </p>
                <p>
                    Partner with SoftGlide LLC and join us on a journey of innovation and expansion.
                </p>
                <a href="about" class="btn-bg1 mt-25 border-round">Find Out More</a>
            </div>
            <div class="col-balance">
                <div class="sticky-img-dual">
                    <img src="assets/art/hero1.webp" alt="">
                    <img src="assets/svg/blob.svg" alt="" class="blob">
                    <img src="assets/art/hero2.webp" alt="">
                </div>
            </div>
            <div class="sticky-img-dual-spacer"></div>
        </section>
        <!-- ABOUT SECTION END -->

        <!-- TEAM SECTION START -->
        <!-- TEAM SECTION END -->

        <!-- PREVIEW SERVICE SECTION START -->
        <section class="bg-primary-foot ta-center">
            <h2 class="section-title ff-damion bg-primary-foot">Service</h2>
            <div class="contained">
                <p class="col-wide mlmr-a">
                    Elevate your business with our specialized software services.
                    <br>Innovating in the realms of E-commerce, Blockchain, and Fintech.
                </p>
            </div>
            <div class="contained row flex-just-center">
                <div class="col-full">
                    <hr>
                </div>
                <div class="col-tri">
                    <i class="bi bi-stars fs-h2"></i>
                    <h3 class="mt-10 ff-damion">E-commerce Solutions</h3>
                    <p>
                        Revolutionizing online retail with bespoke software platforms that enhance customer experience and streamline operations.
                    </p>
                </div>
                <div class="col-tri">
                    <i class="bi bi-diagram-3 fs-h2"></i>
                    <h3 class="mt-10 ff-damion">Blockchain Technology</h3>
                    <p>
                        Leading the charge with secure, transparent, and efficient blockchain applications that redefine industries.
                    </p>
                </div>
                <div class="col-tri">
                    <i class="bi bi-code-slash fs-h2"></i>
                    <h3 class="mt-10 ff-damion">Fintech Innovations</h3>
                    <p>
                        Transforming financial services through cutting-edge digital solutions that boost agility and trust.
                    </p>
                </div>
            </div>
            <a href="service" class="btn-bg2 border-round mt-25">
                View our services
            </a>
        </section>
        <!-- PREVIEW SERVICE SECTION END -->

        {{ template "common_templates/blogs.tmpl" }}

        {{ template "common_templates/news_letter.tmpl"  }}

        <section class="contained ta-center">
            <h2 class="section-title ff-damion">Reach us</h2>
            <p class="col-wide mlmr-a">
                Connect with SoftGlide LLC to embark on your digital transformation journey.
            </p>
            <a href="contact" class="btn-bg1 border-round mt-25">
                Get in touch
            </a>
        </section>

    </main>

    {{ template "common_templates/footer.tmpl" }}

</body>

</html>
{{ end }}